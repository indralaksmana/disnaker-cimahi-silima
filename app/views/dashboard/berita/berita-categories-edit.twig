{% extends 'dashboard/base.twig' %}

{% block title %}{{config['site-name']}} || Edit Category - {{category.name}}{% endblock %}

{% block page %}
<div id="app">
    <div class="row clearfix">
        <div class="col-md-12">
            <div class="card">
                <div class="header">
                    <h2>
                        EDIT KATEGORI BERITA - {{category.name}}
                    </h2>
                </div>
                <div class="body">
                    <div class="panel">
                        <div class="panel-body">
                            <form action="{{ currentRoute }}" method="POST" role="form">
                                <div class="col-md-12">
                                    <div class="form-group form-float{% if has_error('category_name') %} has-error{% endif %}">
                                        <div class="form-line">
                                            <label class="form-label" for="category_name">Nama Kategori <span style="color:red;">*</span></label>
                                            <input type="text" name="category_name" class="form-control"
                                                id="category_name" value="{{category.name}}"
                                                required="required">
                                            <span class="help-block">{{ error('category_name') }}</span>
                                        </div>
                                    </div>
                                    <div class="form-group form-float{% if has_error('category_slug') %} has-error{% endif %}">
                                        <div class="form-line">
                                            <label class="form-label" for="category_slug">Slug Kategori <span style="color:red;">*</span></label>
                                            <input type="text" name="category_slug" class="form-control"
                                                id="category_slug" value="{{category.slug}}"
                                                required="required">
                                            <span class="help-block">{{ error('category_slug') }}</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <a class="btn bg-red m-t-15 waves-effect"
                                            href="{{ path_for('admin-blog-categories-add') }}">KEMBALI</a>
                                        <button type="submit"
                                            class="btn bg-blue m-t-15 waves-effect">SIMPAN</button>
                                    </div>
                                </div>
                                {{ csrf() }}
                                <input type="hidden" name="category_id" value="{{category.id}}" />
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascript %}
{% endblock %}
<!-- form -->
<form action="{{ currentRoute }}" method="POST" role="form">
    
    <div class="row clearfix">
        <div class="col-md-12">
            <div class="form-group form-float{% if has_error('jenis_instansi') %} has-error{% endif %}">
                <select name="jenis_instansi" id="jenis_instansi" class="form-control" required="required">
                    <option value="">-- Jenis Instansi --</option>
                    {% for lp in jenis_instansi %}
                    <option value="{{ lp.id }}" {% if requestParams.jenis_instansi == lp.id or user.pemerintah.jenis_instansi_id == lp.id %}selected{% endif %}>
                        {{ lp.nama_instansi }}
                    </option>
                    {% endfor %}
                </select>
                <label class="error">{{ error('jenis_instansi') }}</label>
            </div>

            <div class="form-group form-float">
                <div class="form-line{% if has_error('nama_instansi') %} error{% endif %}">
                    <label class="form-label" for="nama_instansi">Nama Instansi <span style="color:red;">*</span></label>
                    <input type="text" name="nama_instansi" class="form-control" id="nama_instansi"
                        value="{% if requestParams.nama_instansi %}{{requestParams.nama_instansi}}{% else %}{{user.pemerintah.nama_instansi}}{% endif %}" required="required">
                    <label class="error">{{ error('nama_instansi') }}</label>
                </div>
            </div>

            {% include 'dashboard/admin/bkol/user-profile-fields.twig' %}

        </div>
    </div>

    <div class="row clearfix">
        <div class="col-md-12">
            <div class="form-group">
                <button type="submit" name="submit" class="btn bg-teal form-control">{% if 'add' == form_state %}TAMBAH{% else %}SIMPAN{% endif %}</button>
            </div>
        </div>
    </div>

    {{ csrf() }}
</form>
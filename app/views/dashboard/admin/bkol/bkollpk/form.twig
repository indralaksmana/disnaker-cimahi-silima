<!-- form -->
<form action="{{ currentRoute }}" method="POST" role="form">
    
    <div class="row clearfix">
        <div class="col-md-12">
            
            <div class="form-group form-float{% if has_error('nama_lpk') %} has-error{% endif %}">
                <select name="id_lpk" id="id_lpk" class="form-control" required="required">
                    <option value="">-- Pilih LPK --</option>
                    {% for lp in lpk %}
                    <option value="{{ lp.id }}" {% if requestParams.id_lpk == lp.id or user.lpk_id == lp.id %}selected{% endif %}>
                        {{ lp.nama_lpk }}
                    </option>
                    {% endfor %}
                </select>
                <label class="error">{{ error('id_lpk') }}</label>
            </div>

            {% include 'dashboard/admin/bkol/user-profile-fields.twig' %}
            
        </div>
    </div>

    <div class="row clearfix">
        <div class="col-md-12">
            <div class="form-group">
                <button type="submit" name="submit" class="btn bg-teal form-control">{% if 'add' == form_state %}TAMBAH{% else %}SIMPAN{% endif %}</button>
            </div>
        </div>
    </div>

    {{ csrf() }}
</form>
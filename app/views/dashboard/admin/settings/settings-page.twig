{% extends 'dashboard/base.twig' %}

{% block title %}{{config['site-name']}} || Settings{% endblock %}

{% block stylesheets %}
<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet">
{% endblock %}

{% block page %}

    
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    Settings <small>{{ settingsGrouped.name }}</small>
                </h1>
                <ol class="breadcrumb">
                    <li>
                        <i class="fa fa-dashboard"></i> Dashboard
                    </li>
                    <li class="active">
                        <i class="fa fa-wrench"></i> Page Settings
                    </li>
                    <li class="active">
                        <i class="fa fa-life-ring"></i> {{ settingsGrouped.name }}
                    </li>
                </ol>
            </div>
        </div>

        <div class="row clearfix">
            {% include 'dashboard/admin/settings/settings-view.twig' %}


            {% include 'dashboard/admin/settings/settings-controls.twig' with {'isPage': true} %}

        </div>

    </div>

    <div class="modal fade" id="html-modal">
        <div class="modal-dialog" style="min-width: 80%; min-height: 80%;">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="html-modal-title"></h4>
                </div>
                <div class="modal-body">
                    <div class="tinymce"></div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary app-save-html">Save changes</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascript %}
{% include 'dashboard/scripts/formjs.twig' %}
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap.min.js"></script>
<script src="https://cdn.datatables.net/responsive/2.1.1/js/dataTables.responsive.min.js"></script>
<script src="https://cdn.datatables.net/responsive/2.1.1/js/responsive.bootstrap.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/tinymce/4.7.1/tinymce.min.js" type="text/javascript"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jscolor/2.0.4/jscolor.min.js"></script>
<script src="{{ asset('dashboard/js/settings.min.js') }}"></script>
{% endblock %}
{% extends 'dashboard/base.twig' %}

{% block title %}{{config['site-name']}} || Add New Blog Post{% endblock %}

{% block stylesheets %}

{% endblock %}

{% block page %}
<form action="{{ currentRoute }}" method="POST" role="form">
    <div class="d-flex flex-row justify-content-between align-items-start mb-3" style="border-bottom: 2px solid #5c85e8;">
        <h1 class="page-header">
            Edit Akun
        </h1>
    </div>

    <div class="row">
        <div class="col-md-6 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="forms-sample">

                        <div class="form-group {% if has_error('first_name') %} has-error{% endif %} row">
                            <label for="first_name" class="col-sm-4 col-form-label">Nama Depan</label>
                            <div class="col-sm-8">
                                <input type="text" name="first_name" class="form-control" id="first_name" placeholder="First Name"
                                    value="{% if requestParams.first_name %}{{requestParams.first_name}}{% else %}{{auth.user.first_name}}{% endif %}"
                                    required="required">
                                <span class="help-block">{{ error('first_name') }}</span>
                            </div>
                        </div>
                        <div class="form-group {% if has_error('last_name') %} has-error{% endif %} row">
                            <label for="last_name" class="col-sm-4 col-form-label">Nama Belakang</label>
                            <div class="col-sm-8">
                                <input type="text" name="last_name" class="form-control" id="last_name" placeholder="Last name"
                                    value="{% if requestParams.last_name %}{{requestParams.last_name}}{% else %}{{auth.user.last_name}}{% endif %}"
                                    required="required">
                                <span class="help-block">{{ error('last_name') }}</span>
                            </div>
                        </div>
                        <div class="form-group {% if has_error('email') %} has-error{% endif %} row">
                            <label for="email" class="col-sm-4 col-form-label">Email</label>
                            <div class="col-sm-8">
                                <input type="email" name="email" class="form-control" id="email" placeholder="Email"
                                    value="{% if requestParams.email %}{{requestParams.email}}{% else %}{{auth.user.email}}{% endif %}"
                                    required="required">
                                <span class="help-block">{{ error('email') }}</span>
                            </div>
                        </div>
                        <div class="form-group {% if has_error('username') %} has-error{% endif %} row">
                            <label for="username" class="col-sm-4 col-form-label">Nama User</label>
                            <div class="col-sm-8">
                                <input type="text" name="username" class="form-control" id="username" placeholder="Username"
                                    value="{% if requestParams.username %}{{requestParams.username}}{% else %}{{auth.user.username}}{% endif %}"
                                    required="required">
                                <span class="help-block">{{ error('username') }}</span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-8 offset-sm-4">
                                {{ csrf() }}
                                <input type="submit" name="update_account" value="SIMPAN" class="btn d-block btn-primary w-100" />
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-8 offset-sm-4">
                                <a class="btn btn-warning w-100 text-white change_password">RUBAH PASSWORD</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
</form>
{% endblock %}

{% block javascript %}
<script src="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/6.6.6/sweetalert2.min.js"></script>
<script src="{{ asset('dashboard/js/change-password.js') }}"></script>
{% endblock %}
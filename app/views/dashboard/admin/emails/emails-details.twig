{% extends 'dashboard/base.twig' %}

{% block title %}{{config['site-name']}} || View Email Details{% endblock %}

{% block page %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    Emails <small>View Details</small>
                </h1>
                <ol class="breadcrumb">
                    <li>
                        <i class="fa fa-dashboard"></i> Dashboard
                    </li>
                    <li>
                        <i class="fa fa-envelope"></i> Emails
                    </li>
                    <li class="active">
                        <i class="fa fa-plus"></i> View Details
                    </li>
                </ol>
            </div>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        Email Details
                    </div>

                    <div class="panel-body">
                        <form action="{{ currentRoute }}" method="POST" role="form">
                            <div class="col-md-6">
                                <h3>Details</h3>
                                <h4>Name: {{ user.first_name }} {{ user.last_name }}</h4>
                                <h4>Username: {{user.username}}</h4>
                                <h4>To: {{email.send_to}}</h4>
                                <h4>Subject: {{email.subject}}</h4>
                                <h4>Plain Text: </h4>
                                <div>{{email.plain_text}}</div>
                            </div>

                            <div class="col-md-6">
                                <h3>HTML View</h3>
                                {{email.html|raw}}
                            </div>
                            {{ csrf() }}
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascript %}
<script src="https://cdn.ckeditor.com/4.7.2/standard-all/ckeditor.js"></script>
<script src="{{ asset('dashboard/js/email-templates.min.js') }}"></script>
{% endblock %}

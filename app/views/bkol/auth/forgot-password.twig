{% extends 'bkol/bkol.twig' %}

{% import 'bkol/macros/form.twig' as form %}

{% block stylesheets %}
    <link href="{{ asset('dinasker/css/bootstrap-social.min.css') }}" rel="stylesheet">
{% endblock %}

{% block page %}
<div class="container">
<div class="row">
{% include 'bkol/inc/flash.twig' %}
  <div class="col-4">

  </div>
  <div class="col-md-4 col-sm-12 col-12">
  <div class="login-form" >
          <div class="panel py-3 bg-white" style="border-top: 10px solid #00ccff;">
            <h3><b>Lupa Password</b></h3>
            <p class="p-2">Kami Mengirimkan email yang berisikan link untuk merubah password. Pastikan Email anda adalah email yang digunakan saat mendaftar</p>
          </div>
      <div class="p-4 text-white">
          <form action="{{ path_for('forgot-password') }}" method="POST">
              <div class="input-group mb-2">
              <div class="input-group-prepend">
                <div class="input-group-text">
                  <i class="fa fa-envelope" aria-hidden="true"></i>
                </div>
              </div>
                <input type="email" class="form-control " name="email" value="" id="email" placeholder="Masukan Email">
              </div>
              {{ csrf() }}

              <input type="submit" value="RUBAH PASSWORD" class="btn btn-primary">
          </form>
      </div>
  </div>
  </div>
  </div>
  <div class="col-4">

  </div>
</div>

</div>


{% endblock %}

{% block javascript %}
    {{ recaptchaJs() }}
{% endblock %}

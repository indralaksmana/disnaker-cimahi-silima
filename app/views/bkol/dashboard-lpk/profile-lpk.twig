    readFile(this);
  });
  $('#cropImageBtn').on('click', function (ev) {
    $uploadCrop.croppie('result', {
      type: 'base64',
      format: 'jpeg',
      size: {
        width: 200,
        height: 200
      }
    }).then(function (resp) {
      $('#logo').val(resp);
      $("#form").submit(function (e) {

{% extends 'bkol/bkol-dashboard2.twig' %}

{% block page %}

<div class="px-3">
  <div class="hr-theme d-flex  align-items-center">
    <div class="hr-title">
      <h3 class="title-section">Alumni Prodi {{nama}}</h3>
    </div>
    <div class="hr-line flex-grow-1" style="background-image: url('{{base_url()}}/img/bkol/line.png')"></div>
    <form id="form_upload" enctype="multipart/form-data" action="{{ path_for('pt-dashboard-program-studi-uploadaction') }}" method="post" style="display: inline; margin-left: 10px;">
        <input type="hidden" name="pt_id" value="{{pt_id}}" />
          <input type="hidden" name="ps_id" value="{{ps_id}}" />
        <input type="hidden" name="nama" value="{{nama}}" />
        {{csrf()}}
        <input id="xls" type="file" name="xls" />
    </form>

  </div>
  <br/>
  <a target="_blank" href="https://drive.google.com/file/d/1-LjQXLNqjEF-xQLnHwhmcd6vi_m1jb9x/view?usp=sharing">download template xlsx</a>
  <p/>
  
  <div class="table-responsive">
        <table class="table table-striped table-bordered" cellspacing="0" width="100%" id="posts-table">
            <thead>
                <tr>
                    <th>No</th>
                    <th>Nama</th>
                    <th>Nim</th>
                    <th>Email</th>
                    <th>Tahun Lulus</th>
                </tr>
            </thead>
            <tbody>
                {% if users|length == 0 %}
                    <tr class="text-center">
                        <td colspan="5">Belum data alumni di upload</td>
                    </tr>
                {% endif %}
                {% set count = 0 %}
                {% for u in users %}
                    {% set count = count + 1 %}
                <tr>
                    <td>{{ count }}</td>
                    <td>{{u.fullname}}</td>
                    <th>{{u.nim}}</th>
                     <th>{{u.email}}</th>
                    <th>{{u.tahun_lulus}}</th>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>  
</div>
{% endblock %}

{% block javascript %}
<script type="text/javascript">
$(document).ready(function () {
    var url = $('meta[name="url"]').attr('content');
    $.ajaxSetup({
      headers: {
        'X-CSRF-TOKEN': $('meta[name="csrf-token"]').attr('content')
      }
    });

    $('#xls').change(function () {
      //var id = ""+{{data.pt_id}}+"_"+{{data.ps_id}};
      $("#form_upload").submit();
    });
  });
</script>
{% endblock %}

{% if blogCategories|length > 0 %}

<div class="card my-4">
	<h5 class="card-header">Kategori</h5>
	<div class="card-body">
    		{% for category in blogCategories %}
    		<a href="{{path_for('blog-category', {'slug': category.slug})}}" class="btn m-1" role="btuton">{{category.name}} <span class="badge badge-light">{{category.posts_count}}</span>

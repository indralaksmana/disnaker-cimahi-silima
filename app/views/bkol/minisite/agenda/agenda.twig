{% extends "bkol/bkol.twig" %}
{% block stylesheets %}
<style>
.leftside .hr-theme{
  margin-bottom: 25px;
}
</style>
{% endblock %}

{% block page %}
{% include 'bkol/inc/flash.twig' %}

<div class="bg-white">
<div id="home" class="container pb-5 pt-5">
	<div class="row">
		<div class="col-xl-12 col-sm-12">
			<div class="row leftside">
				
				<div class="col-sm-12 p-3">
					<div class="hr-theme ">
						<div class="hr-title"><h5 class="title-section">Agenda Kegiatan</h5></div>
						<div class="hr-line flex-grow-1" style="background-image: url('{{base_url()}}/img/bkol/line.png')"></div>
					</div>

					<div class="row posts-loop">
						{% for a in agenda %}
						<div class="col-md-4">
							<div class="card mb-3">
								<div class="row no-gutters">
									<div class="col-md-4">
										<div class="agenda-calendar">
											<span class="date">{{ a.publish_at|date('d')}}</span>
											<span class="month">{{ a.publish_at|date('F')}}</span>
										</div>
									</div>
									<div class="col-md-8">
										<div class="card-body pt-0">
											<p class="card-text-category text-uppercase">{{ a.category.name }}</p>
											<h5 class="card-title">{{ a.agendatitle }}</h5>
						                    
						                    <p class="card-text"><small class="text-muted">{{ a.address }}</small></p>
						                    <p class="card-text"><small class="text-muted">{{ a.publish_at|date('d F Y') }}</small></p>
										</div>
									</div>
								</div>
							</div>

							<div class="text-align-left">
								{{ a.content|raw }}
							</div>
						</div>
						{% endfor %}
					</div>
				</div>

			</div>
		</div>
	</div>
</div>
</div>

{% endblock %}
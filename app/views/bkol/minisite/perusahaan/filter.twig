
  <div class="col-sm-12 p-3">
  <div class="input-group">
  <input data-jplist-control="textbox-filter" data-group="list-perusahaan" data-name="my-filter-2"  type="text" value="" placeholder="Filter Berdasarkan Nama" data-clear-btn-id="author-clear-btn" class="form-control"/>
  <div class="input-group-append">
    <button class="btn btn-secondary" type="button" id="author-clear-btn">Clear</button>
  </div>
</div>
</div>

  <div class="col-sm-12 p-3">
    <div class="hr-theme ">
      <div class="hr-title">
        <h5 class="title-section">LOKASI</h5>
      </div>
      <div class="hr-line flex-grow-1" style="background-image: url('{{base_url()}}/img/bkol/line-2.png')"></div>
    </div>
    <ul class="kategori-list">
        <li class="d-flex justify-content-start align-items-center">
          <input id="pp1" data-name="tags-filter" data-or="filters" type="checkbox" data-jplist-control="checkbox-text-filter" data-path=".pp1" data-group="list-perusahaan" data-name="cb-filter" value="pp1"/>
          <label for="pp1" class='cat-check'>Dalam Kota Cimahi</label>
        </li>
        <li class="d-flex justify-content-start align-items-center">
          <input id="pp2" data-name="tags-filter" data-or="filters" type="checkbox" data-jplist-control="checkbox-text-filter" data-path=".pp2" data-group="list-perusahaan" data-name="cb-filter" value="pp2"/>
          <label for="pp2" class='cat-check'>Luar Kota Cimahi</label>
        </li>
    </ul>
  </div>
  <div class="col-sm-12 p-3">
    <div class="hr-theme ">
      <div class="hr-title">
        <h5 class="title-section">KABUPATEN/KOTA</h5>
      </div>
      <div class="hr-line flex-grow-1" style="background-image: url('{{base_url()}}/img/bkol/line-2.png')"></div>
    </div>
    <ul class="kategori-list">
      {% for r in PerusahaanLokasi %}
        <li class="d-flex justify-content-start align-items-center">
          <input id="kabupatenkota{{r.id}}" data-name="tags-filter" data-or="filters" type="checkbox" data-jplist-control="checkbox-text-filter" data-path=".kabupatenkota{{r.id}}" data-group="list-perusahaan" data-name="cb-filter" value="kabupatenkota{{r.id}}"/>
          <label for="kabupatenkota{{r.id}}" class='cat-check'>{{r.lokasi_nama}}</label>
        </li>
      {% endfor %}
    </ul>
  </div>
   <button data-jplist-control="reset" data-group="list-perusahaan" class="btn btn-primary btn-block" data-name="RESET" type="button">
    Reset
  </button>
